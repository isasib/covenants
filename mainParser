                }
            } else {
                String end = goToEnd(toc, "NEGATIVE COVENANTS");
                int endspot = fileContents.indexOf(end);
                fileContents.delete(endspot, fileContents.length() - 1);
            }

            //create template
            String tt = templateTop(borrower, arranger, agent, amount, date);
            String tm = "";
            if (rryes) {
